#!/usr/bin/env zsh
#
# Run bumblebee-status as my i3bar
#

~/.i3/bumblebee-status/bumblebee-status \
    -m \
        shortnic \
        isup:goog \
        battery \
        cpu \
        load1 \
        pasink \
        date \
        tztime:mtv \
        time \
        tztime:utc \
    -p \
        interval=2 \
        mtv.tz="US/Pacific" \
        utc.tz="UTC" \
        time.format="%H:%M" \
        date.format="%b %d %Y" \
        shortnic.exclude="enp0s25,lo,docker0,enp0s31f6" \
        goog.address="www.google.com" \
        goog.name="NET" \
    -t carapace-powerline

