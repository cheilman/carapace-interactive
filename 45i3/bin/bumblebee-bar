#!/usr/bin/env zsh
#
# Run bumblebee-status as my i3bar
#

~/.i3/bumblebee-status/bumblebee-status -m shortnic isup:goog battery cpu load1 pasink date time utc -p interval=2 time.format="%H:%M" utc.format="%H:%M" date.format="%b %d %Y" shortnic.exclude="enp0s25,lo,docker0" goog.address="www.google.com" goog.name="NET" -t carapace-powerline

